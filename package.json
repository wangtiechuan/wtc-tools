{
  "name": "wtc-tools",
  "private": true,
  "description": "wtc-tools",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "dev": "dumi dev",
    "docs:build": "dumi build",
    "lint": "npm run lint:es && npm run lint:css",
    "lint:es": "eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "pub": "npm run build && lerna publish",
    "start": "npm run dev",
    "watch": "lerna run build:watch",
    "watch:common": "lerna run build:watch --scope=@wtc/wtc-common-tools",
    "watch:node": "lerna run build:watch --scope=@wtc/wtc-node-tools",
    "watch:react": "lerna run build:watch --scope=@wtc/wtc-react-comp",
    "watch:web": "lerna run build:watch --scope=@wtc/wtc-web-tools"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@umijs/lint": "^4.0.0",
    "babel-preset-minify": "^0.5.2",
    "dumi": "^2.0.0-rc.0",
    "eslint": "^8.23.0",
    "father": "^4.1.0",
    "husky": "^8.0.1",
    "lerna": "^6.3.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "stylelint": "^14.9.1"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "packageManager": "pnpm@6.11.0",
  "publishConfig": {
    "access": "public"
  },
  "authors": [
    "wangtiechuanmail@163.com"
  ]
}
